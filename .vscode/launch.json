{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend (student-meal-planner)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/student-meal-planner/backend/index.js", // 진입 파일이 index.js가 아니라면 수정해주세요.
            "cwd": "${workspaceFolder}/student-meal-planner/backend",
            "console": "integratedTerminal"
        },
        {
            "request": "launch",
            "name": "Launch Program",
            "type": "node",
            "program": "${workspaceFolder}/main.ts",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-brk",
                "--allow-all"
            ],
            "attachSimplePort": 9229
        }
    ]
}